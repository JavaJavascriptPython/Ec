<div class="container">
  <nav class="sidebar">
    <!-- Logo -->
    <div class="logo">
      <img src="assets/logo.png" alt="Logo" />
      <h2>MyApp</h2>
    </div>

    <ul>
      <li (click)="toggleMenu('dashboard')" [class.active]="activeMenu === 'dashboard'">
        Dashboard
      </li>
      <li (click)="toggleMenu('settings')" [class.active]="activeMenu === 'settings'">
        Settings
        <ul *ngIf="activeMenu === 'settings'" class="submenu">
          <li (click)="setActiveChild('profile')">Profile</li>
          <li (click)="setActiveChild('preferences')">Preferences</li>
        </ul>
      </li>
      <li (click)="toggleMenu('reports')" [class.active]="activeMenu === 'reports'">
        Reports
        <ul *ngIf="activeMenu === 'reports'" class="submenu">
          <li (click)="setActiveChild('daily')">Daily</li>
          <li (click)="setActiveChild('monthly')">Monthly</li>
        </ul>
      </li>
    </ul>
  </nav>

  <main class="content">
    <ng-container [ngSwitch]="activeChild">
      <div *ngSwitchCase="'profile'">Profile Component Content</div>
      <div *ngSwitchCase="'preferences'">Preferences Component Content</div>
      <div *ngSwitchCase="'daily'">Daily Report Content</div>
      <div *ngSwitchCase="'monthly'">Monthly Report Content</div>
      <div *ngSwitchDefault>Select an option from the menu</div>
    </ng-container>
  </main>
</div>



import { Component } from '@angular/core';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {
  activeMenu: string | null = null;
  activeChild: string | null = null;

  toggleMenu(menu: string) {
    this.activeMenu = this.activeMenu === menu ? null : menu;
  }

  setActiveChild(child: string) {
    this.activeChild = child;
  }
}



.container {
  display: flex;
  min-height: 100vh;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

